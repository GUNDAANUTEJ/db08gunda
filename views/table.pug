extends layout

block content
  - let create=`buy(\"/table/create\")`
  button.btn( class="btn-info ml-2", onclick=create ) Create a table
  h1= title
  - let table=results;
  div(class="container-fluid mt-3")
   div(class="row m-1")
    each form in table
     - let destination=`buy(\"/table/update?id=${form._id}\")`
     - let detail=`buy(\"/table/detail?id=${form._id}\")`
     - let del=`buy(\"/table/delete?id=${form._id}\")`
     div(class="col-sm-6 bg-success m-1 p-3") Table #{form.Brand} - #{form.quality} - #{form.cost}
      button.btn( class="btn-primary ml-2", onclick=destination ) Update
      button.btn( class="btn-warning ml-2", onclick=detail ) Detail
      button.btn( class="btn-danger ml-2", onclick=del ) Delete
  
   script.
    function buy(path){
        window.location.href=path

        //alert(`You purchased Item ${a+1}`)
      }